@model cinema_app_back.Models.Seat

@{
    ViewData["Title"] = "Delete Seat";
}

<h1>Delete Seat</h1>

<h3>Are you sure you want to delete this seat?</h3>
<div>
    <h4>Seat Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Hall
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hall.Id)
        </dd>

        <dt class="col-sm-2">
            Row Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RowNumber)
        </dd>

        <dt class="col-sm-2">
            Seat Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatNumber)
        </dd>

        <dt class="col-sm-2">
            Display Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayNumber)
        </dd>

        <dt class="col-sm-2">
            Reserved
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsReserved)
        </dd>

        <dt class="col-sm-2">
            Available
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
